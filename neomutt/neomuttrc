set config_charset="utf-8"
set charset="utf-8"
set send_charset="utf-8"

source ~/.neomutt/gruvbox-theme
source ~/.neomutt/gruvbox-theme-extended

set realname="Matej ÄŒamaj"

set imap_keepalive=60
set imap_passive=no
set imap_check_subscribed=yes
set imap_idle=yes
set mail_check=60

set sort=threads
set sort_aux="reverse-last-date-received"
set date_format="%d %b %H:%M"
set index_format="%Z %D %-15.15L (%?l?%4l&%4c?) %s"
set pager_context=3
set pager_index_lines=10

set tmpdir="~/.tmp"
# Store message headers locally to speed things up.
set header_cache = ~/.cache/neomutt
# Store messages locally to speed things up, like searching message bodies.
set message_cachedir = "~/.cache/neomutt"

set crypt_use_gpgme=yes
# SSL hardening
set ssl_force_tls=yes
set ssl_starttls=yes
set ssl_use_sslv3=no
set ssl_use_tlsv1=no
set ssl_use_tlsv1_1=no
set ssl_use_tlsv1_2=yes
set ssl_verify_dates=yes
set ssl_verify_host=yes

# Sidebar
set sidebar_visible
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set mail_check_stats
bind index,pager \Ck sidebar-prev
bind index,pager \Cj sidebar-next
bind index,pager \Co sidebar-open
bind index,pager \Cn next-unread

# Folder hooks
folder-hook . "push <collapse-all>"

# Account configuration
set from                    = camaj@spaceknow.com
set folder                  = imaps://imap.gmail.com/
set imap_user               = camaj@spaceknow.com
set imap_pass               = `pass spaceknow/neomutt`
set smtp_url                = smtps://$imap_user:$imap_pass@smtp.gmail.com
set smtp_authenticators     = plain
set spoolfile               = +INBOX

# Specify where to save and/or look for postponed messages.
set postponed = +[Gmail]/Drafts
